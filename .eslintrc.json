{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        // "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-console": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "arrow-body-style": ["error", "always"],
        "operator-assignment": "off",
        "no-plusplus": "off"
    }
}
